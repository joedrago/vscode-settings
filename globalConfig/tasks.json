{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Open in Explorer",
            "presentation": {
                "reveal": "never"
            },
            "type": "shell",
            "command": "explorer.exe",
            "args": [
                "/select,${file}"
            ]
        },
        {
            "label": "Open Raw",
            "presentation": {
                "reveal": "never"
            },
            "type": "shell",
            "command": "${file}",
            "problemMatcher": []
        },
        {
            "label": "Compile Local CoffeeScript",
            "presentation": {
                "reveal": "always"
            },
            "type": "shell",
            "command": "coffee -c -m -o ./build .",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}