// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "shift+alt+2",
        "command": "workbench.action.editorLayoutTwoColumns"
    },
    {
        "key": "shift+alt+1",
        "command": "workbench.action.editorLayoutSingle"
    },
    {
        "key": "shift+alt+3",
        "command": "workbench.action.editorLayoutTwoRows"
    },
    {
        "key": "ctrl+shift+alt+E",
        "command": "workbench.action.tasks.runTask",
        "args": "Open in Explorer"
    },
    {
        "key": "f10",
        "command": "workbench.action.tasks.runTask",
        "args": "Open Raw",
        "when": "!inDebugMode"
    },
    {
        "key": "f7",
        "command": "workbench.action.tasks.build",
        "when": "!isInDiffEditor"
    },
    {
        "key": "escape",
        "command": "workbench.action.closePanel",
        "when": "!terminalFindWidgetVisible"
    },
    {
        "key": "escape",
        "command": "removeSecondaryCursors",
        "when": "editorHasMultipleSelections && textInputFocus && !findWidgetVisible"
    },
    {
        "key": "escape",
        "command": "closeFindWidget",
        "when": "findWidgetVisible"
    },
    {
        "key": "ctrl+k ctrl+k",
        "command": "bookmarks.toggle",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+k ctrl+l",
        "command": "bookmarks.clearFromAllFiles"
    },
    {
        "key": "ctrl+k ctrl+n",
        "command": "bookmarks.jumpToNext",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+l",
        "command": "-bookmarks.jumpToNext",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+k ctrl+p",
        "command": "bookmarks.jumpToPrevious",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+j",
        "command": "-bookmarks.jumpToPrevious",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+S",
        "command": "workbench.action.tasks.runTask",
        "args": "Uncrustify"
    }
]